<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card mb-3 mt-3 p-2">
        <h2><%= @flat.name%></h2>
        <p><%= @flat.address%></p>
      </div>
      <div class="card p-2 mb-3">
        <h4> A Litle Bit More About This Flat</h4>
        <p><%= @flat.description%></p>
      </div>
      <div class="card p-2 mb-3">
        <h4> Details </h4>
        <p><%= @flat.price_per_night%></p>
        <p><%= @flat.number_of_guests%></p>
      </div>
    </div>
    <div class="col-6">
      <%= image_tag "#{@flat.picture_url}", class:"mt-3 mb-3 h-50 w-100"%>
      <div class="card p-2 mb-3">
        <h4> Share </h4>
        <p>Facebook</p>
        <p>Twitter</p>
        <p>Instagram</p>
        <p>Pinterest</p>
      </div>
    </div>
  </div>
</div>
