<div class="container">
  <h1>Our Flats</h1>
  <p>You searched for <%= @query%>. We found <%= @flats_found.count %> flats out of our <%= @flats.count %> on our website</p>
  <div class="row">
    <%@flats_found.each do |flat|%>
    <div class="col-3 card m-1 p-1">
      <%= image_tag "#{flat.picture_url}", class:"h-50"%>
      <h5 class="m-1"> <%= flat.name%> </h5>
      <p class="m-1"> <%= flat.address%> </p>
      <span>
        <%= flat.price_per_night%> |
        <%= flat.number_of_guests%>
      </span>
      <span>
      <%= link_to "More Info", flat_path(flat.id), class:"btn btn-info mb-2" %>
      <%= link_to "Edit", edit_flat_path(flat), class:"btn btn-primary mb-2"%>
      <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger mb-2" %></span>
    </div>
    <%end%>
  </div>
</div>
