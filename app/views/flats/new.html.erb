<div class="container w-50 p-4">
  <h3>Add A New Flat</h3>

  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name%>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :picture_url %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit class: "btn btn-primary"%>
    <%= link_to "Cancel", flats_path, class: "btn btn-danger"%>
  <% end %>
</div>
